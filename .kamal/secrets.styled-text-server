SECRETS=$(kamal secrets fetch --adapter doppler --from campsite-styled-text-server/prd KAMAL_REGISTRY_PASSWORD KAMAL_REGISTRY_USER_NAME AUTHTOKEN SENTRY_DSN SENTRY_AUTH_TOKEN SENTRY_ORG SENTRY_PROJECT)

KAMAL_REGISTRY_USER_NAME=$(kamal secrets extract KAMAL_REGISTRY_USER_NAME $SECRETS)
KAMAL_REGISTRY_PASSWORD=$(kamal secrets extract KAMAL_REGISTRY_PASSWORD $SECRETS)
AUTHTOKEN=$(kamal secrets extract AUTHTOKEN $SECRETS)
SENTRY_DSN=$(kamal secrets extract SENTRY_DSN $SECRETS)
SENTRY_AUTH_TOKEN=$(kamal secrets extract SENTRY_AUTH_TOKEN $SECRETS)
SENTRY_ORG=$(kamal secrets extract SENTRY_ORG $SECRETS)
SENTRY_PROJECT=$(kamal secrets extract SENTRY_PROJECT $SECRETS)